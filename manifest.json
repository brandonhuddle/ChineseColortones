{
	"manifest_version": 2,
	"name": "Chinese Colortones",
	"description": "Extension to color Chinese characters based off their tones in Mandard",
	"version": "1.0",
	"content_scripts": [
		{
			"matches": [ "*://*/*" ],
			"exclude_matches": ["https://www.youtube.com/*"],
			"js": [
				"chinesetoneslist.js",
				"chinesecolortones.js"
			],
			"run_at": "document_end"
		}
	]
}
